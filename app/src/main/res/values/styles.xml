<resources>

    <!--Base Theme-->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <!--no actionbar and title-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--action bar color-->
        <item name="colorPrimary">@color/primary</item>
        <!--status bar color-->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--window background 窗体背景色-->
        <item name="android:windowBackground">@color/comment_bg</item>
    </style>



    <!-- 整个app的主题 -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!--actionbar的样式-->
        <item name="actionBarStyle">@style/JDActionBarStyle</item>

        <!--标题动画  侧滑界面 导航栏-->
        <item name="drawerArrowStyle">@style/AppTheme.JDDrawerArrowStyle</item>
        <!--text color 文字颜色-->
        <item name="android:textColorPrimary">@color/primary_text</item>
    </style>


    <!-- 设置标题栏样式 -->
    <style name="JDActionBarStyle" parent="Widget.AppCompat.Light.ActionBar">
        <!--标题栏文字样式-->
        <item name="titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <!-- 标题栏文字 大小  颜色 -->
    <style name="ActionBarTitleStyle" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/actionbar_title</item>
    </style>

    <!--动画-->
    <style name="AppTheme.JDDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <!--是否开启导航图标的旋转效果-->
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>




    <!--图片详情页 -->
    <style name="ImageDetailActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 新鲜事详情页  actionbar的覆盖模式 （支持兼容库）-->
    <style name="FreshNewsDetailActivityTheme" parent="@style/AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

</resources>
